# Lista de productos como diccionarios
inventario = [
    {"nombre": "Café", "precio": 5000},
    {"nombre": "Azúcar", "precio": 3000},
    {"nombre": "Leche", "precio": 4500},
    {"nombre": "Arroz", "precio": 2000},
    {"nombre": "Chocolate", "precio": 8000}
]

# Ordenamos el inventario por precio, de mayor a menor
# sorted() crea una nueva lista ordenada
# key=lambda p: p["precio"] indica que el criterio de orden es el precio
# reverse=True indica que los queremos de mayor a menor
inventario_ordenado = sorted(inventario, key=lambda p: p["precio"], reverse=True)

# Tomamos solo los 3 primeros (los más caros)
top3 = inventario_ordenado[:3]

# Mostramos el Top 3
print("=== TOP 3 PRODUCTOS DE MAYOR A MENOR ===")
for producto in top3:
    print(f"{producto['nombre']} - ${producto['precio']}")
